<!--pages/library/library.wxml-->
<view class="container">

 <form class="biaodan" bindsubmit="formSubmit">
  <view wx:for="{{libList}}" wx:key="index">
    <view>
    <text class="title">{{item.name}}\n</text>
      <!-- <text wx:for="{{item.libs}}" wx:for-item="nameItem" wx:key="libId">
        <text class="library">{{nameItem.name}}\n</text> -->
       
        <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio"wx:for="{{item.libs}}" wx:for-item="nameItem" wx:key="libId">
        <!-- <radio value="{{nameItem.name}},{{nameItem.libId}}" checked="{{item.checked}}" color="red"></radio> -->
        <radio name="libName"value="{{nameItem.name}}" checked="{{item.checked}}" color="red"></radio>
        <input  bindfocus="inputChange"  type='text'   value="{{nameItem.libId}}"/>
        <!-- <input  bindblur="inputChange2"  type='text'   value="{{nameItem.libraryCode}}"/> -->
      
        <text>{{nameItem.name}}\n</text>
        <text bindchange="inputChange2" class="libCode"value="{{nameItem.libraryCode}}">{{nameItem.libraryCode}}\n</text>
      </label>
    </radio-group>
  </view>
</view>
<view>
      <button  bindtap="goback" class="submitBtn" size="default" type="primary" >
        确定
      </button>
    </view>
  </form>
</view>